<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Layout File</title>
    <link href="~/favicon.ico"
          rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet"
          href="@Url.Content("~/Content/Site.css")" />
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    @Html.ActionLink("Layout File",
                        "Index", "Home")
                </p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>
                            @Html.ActionLink("Home",
                            "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("About",
                            "About", "Home")
                </li>
            </ul>
        </nav>
    </div>
</div>
</header>
<div id="body">
    @RenderSection("featured", required: false)
    <section class="content-wrapper main-content clear-fix">
        @RenderBody()
    </section>
</div>
<footer>
    <div class="content-wrapper">
        <div class="float-left">
            <p>&copy; @DateTime.Now.Year &acirc;&euro;&ldquo; Layout File</p>
        </div>
    </div>
</footer>
</body>
</html>
 
